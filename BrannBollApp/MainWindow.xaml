<Window x:Class="BrannBollApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrannBollApp"
        mc:Ignorable="d"
        Title="BrännbollApp"
        Height="450" Width="800"
        SizeToContent="WidthAndHeight">
    <StackPanel Margin="10">
        <Label FontSize="30">Brännbollsräknaren</Label>
        <StackPanel Orientation="Horizontal">
            <Label>Lag inne</Label>
            <TextBox FontSize="18" FontWeight="Bold" Name="txbInne" Width="100"></TextBox>
            <Label>Lag ute</Label>
            <TextBox FontSize="18" FontWeight="Bold" Name="txbUte" Width="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Click="KlickFrivarv" Width="100" Padding="10" Margin="10">Frivarv</Button>
            <Button Click="KlickBränning" Width="100" Padding="10" Margin="10">Bränning</Button>
            <Button Click="KlickLyra" Width="100" Padding="10" Margin="10">Lyra</Button>
            <Button Click="KlickVarv" Width="100" Padding="10" Margin="10">Varv</Button>
        </StackPanel>
        <Label>Historik</Label>
        <TextBox Name="txbHistorik" IsReadOnly="True" Width="450" Height="200"></TextBox>
    </StackPanel>
</Window>
